<% @posts.each do |post| %>
  <div class="post_wrapper">
    <h4 class="title"><%= link_to post.title, post %></h4>
    <p class="date">Barked on <%= post.created_at.strftime("%B, %d, %Y") %></p>

      <div class="btn-group">
      <%= link_to like_post_path(post), method: :put, class: "btn btn-default btn-sm", style: "color: green;"  do %>
        <span class="glyphicon glyphicon-chevron-up"></span>
        Good Dog
        <%= post.get_upvotes.size %>
      <% end %>
      <%= link_to dislike_post_path(post), method: :put, class: "btn btn-default btn-sm", style: "color: red;" do %>
        <span class="glyphicon glyphicon-chevron-down"></span>
        Bad Dog
        <%= post.get_downvotes.size %>
      <% end %>
    </div>
  </div>
<% end %>
