<div id="post_content">
  <h3 class="title">
    <%= @post.title %>
  </h3><br />

  <p class="date">
    Submitted <%= time_ago_in_words(@post.created_at) %> Ago <br />
      <%= link_to 'Edit', edit_post_path(@post) %>
      <%= link_to 'Delete', post_path(@post),method: :delete, data: {confirm: 'Are you sure?'} %>
  </p><br />

  <p class="body">
    <%= @post.body %>
  </p>

</div>
